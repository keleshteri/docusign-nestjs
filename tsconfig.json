{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "ES2017",
            "ES7",
            "ES6",
        ],
        "target": "ES2017",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}